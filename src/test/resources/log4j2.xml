<Configuration status="ERROR" monitorInterval="5">
    <Appenders>
        <Console name="Out">
            <PatternLayout pattern="%d %c [%t] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Out"/>
        </Root>
    </Loggers>
</Configuration>